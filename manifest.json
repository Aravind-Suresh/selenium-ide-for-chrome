{
	"name": "SeleniumIDE for Chrome",
	"description": "SeleniumIDE for Chrome",
	"manifest_version": 2,
	"version": "0.1",
	"browser_action": {
		"default_title" : "SeleniumIDE",
		"default_icon": "/img/icon128.png",
		"default_popup": "/html/popup.html"
	},
	"content_scripts" : [{
		"matches": ["<all_urls>"],
		"js" : [
			"/js/content_scripts.js"
		]
	}],
	"permissions": [
		"http://localhost:9515/",
		"tabs"
	],
	"icons": {
		"48": "/img/icon48.png"
	}
}